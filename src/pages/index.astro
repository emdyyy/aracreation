    new IntersectionObserver(
      (s) => {
        if (s[0].isIntersecting)
          for (let t = 0; t < h.children.length; t++) {
            const e = h.children[t];
            e.classList.remove("opacity-0"),
              e.classList.remove("translate-y-10");
          }
      },
      {
        threshold: 0.35,
      }
    ).observe(h);
</script>
